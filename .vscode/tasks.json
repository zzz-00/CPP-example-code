{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file", //任务的名字，就是刚才在命令面板中选择的时候所看到的，可以自己设置
            "command": "D:/software/mingw-w64/x86_64-12.2.0-release-win32-seh-rt_v10-rev0/bin/g++.exe",
            "args": [ //编译时候的参数
                "-g", //添加gdb调试选项
                "${fileDirname}\\*.cpp",
                "-o", //指定生成可执行文件的名称
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:/software/mingw-w64/x86_64-12.2.0-release-win32-seh-rt_v10-rev0/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true //表示快捷键Ctrl+Shift+B可以运行该任务
            }
        }
    ]
}